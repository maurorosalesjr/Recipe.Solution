@{
  Layout = "_Layout";
}

@model Recipe.Models.Formula

<h1>Recipe Details</h1>
<hr />
<h3>@Html.DisplayNameFor(model => model.FormulaName): @Html.DisplayFor(model => model.FormulaName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This formula does not belong to any tags</p>
}
else
{
  <h4>Tags the formula belongs to:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Tag.TagName</li>
    @using (Html.BeginForm("DeleteTag", "Formulas"))
    {
      @Html.Hidden("joinId", @join.BoxId)
      <input type="submit" value="Delete" class="delete" />
    }
  }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index", new { area = "" }, new { @class = "accept" })</p>
<p>@Html.ActionLink("Edit Formula", "Edit", new { id = Model.FormulaId }, new { @class = "accept" })</p>
<p>@Html.ActionLink("Delete Formula", "Delete", new { id = Model.FormulaId }, new { @class = "accept" })</p>