@{
  Layout = "_Layout";
}

@model Recipe.Models.Formula

<h1 class="img">Add a new Recipe</h1>

@using (Html.BeginForm())
{
    @Html.Label("Recipe Name: ")
    <br>
    <div class="create">@Html.TextBoxFor(model => model.FormulaName, new { style = "width: 90%;"})</div>
    <br>
    @Html.LabelFor(model => model.Ingredients)
    <p>Format: quantity ingredient, <br>---dont forget to pace commas between each ingredient </p>
    <br>
    <div class="create"> @Html.TextAreaFor(model => model.Ingredients, new { @rows=5, style = "width: 90%;" })</div>
    <br>
    @Html.LabelFor(model => model.Instructions)
    <br>
    <div class="create"> @Html.TextAreaFor(model => model.Instructions, new { @rows=10, style = "width: 90%;" })</div>
    <br>
    @Html.Label("Select tag: ")
    @Html.DropDownList("TagId")
    <br>
    for(int i = 1; i < 11; i++)
    {
      <input type="radio" id="Rating" name="Rating" value="@i" />@i
    }
    <br>
    <input type="submit" value="Add new recipe" class="accept" />
    <br>
}

<br>
<p>@Html.ActionLink("Show all recipes", "Index", new { area = "" }, new { @class = "accept" })</p>