@{
  Layout = "_Layout";
}

@using Recipe.Models;

<h1>Tags</h1>

@if (@Model.Count == 0)
{
  <h3>No tags have been added yet!</h3>
} 

<ul>
  @foreach(Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.TagName}", "Details", new { id = tag.TagId }, new { @class = "name"} )</li>
  }
</ul>

<p>@Html.ActionLink("Add new tag", "Create", new { area = "" }, new { @class = "accept" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "accept" })</p>